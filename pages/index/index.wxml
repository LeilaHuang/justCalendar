<view class="toDo-list" wx:for="{{res}}" wx:for-item="itemName" wx:for-index="idx">
  <!-- listOne -->
  <view class="{{isChecked[idx]?'userCellActive':'userCell'}}" data-idx="{{idx}}" > 
    <view class="toDo-time">{{itemName.time}}</view>
    <view class="{{isChecked[idx]?'haveLineThroughTitle':'noLineThroughTitle'}}">{{itemName.title}}</view>
    <text class="{{isChecked[idx]?'haveLineThrough':'noLineThrough'}}">{{itemName.descripition}}</text>
    <view class="toDo-footer">
      <switch class="switch-done" checked="{{itemName.status}}" bindchange="switchChange" id = "{{itemName.objectId}}" data-id = "{{idx}}" color = "#1296db" />
    </view>
  </view>
</view>